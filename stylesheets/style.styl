// Require dependencies
@require 'jeet'
@require 'rupture'

// Bring in google fonts
@import url('http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic')

// Reset
global-reset()

// Variables {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

helvetica = 'Helvetica Neue', Helvetica, Arial, sans-serif
droid = 'Droid Serif', Georgia, Times, 'Times New Roman', serif

// Colors by http://clrs.cc/
navy = #001F3F
blue = #0074D9
aqua = #7FDBFF
teal = #39CCCC
olive = #3D9970
green = #2ECC40
lime = #01FF70
yellow = #FFDC00
orange = #FF851B
red = #FF4136
maroon = #85144B
fuchsia = #F012BE
purple = #B10DC9
black = #111111
gray = #AAAAAA
silver = #DDDDDD

// Custom colors
gray = #eee
black = #222

// }}} END Variables

// General {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

h1
  font-size 50px
  +mobile()
    font-size 36px

a
  color blue
  transition color .2s ease-out
  &:hover
    color orange

*
  box-sizing border-box

html
body
  overflow-x hidden

body
  font-size 18px
  font-family droid
  color black
  margin 0
  +below(600px)
    font-size 16px

h1
h2
h3
h4
p
  text-rendering optimizeLegibility

p
  line-height 1.5

.container
  cf()
  max-width 840px
  min-width 320px
  margin 0 auto
  padding 20px
  +below(600px)
    padding 10px

.left
  float left
.right
  float right
.left
.right
  +mobile()
    float none


// }}} END General

// Index {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

#index, .doc
  li
    line-height 1.5

// }}} END Index

// Documentation Page {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

.doc
  pre
    background gray
    border-radius 3px
    font-size 18px
    box-shadow inset 0 0 10px transparentify(black, 20%)
    margin 0 -500%
    padding 20px 500%
    +below(1000px)
      overflow auto
    +below(800px)
      font-size 16px
    +below(400px)
      font-size 14px


// }}} END Documentation Page

// Footer {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

.table
  display table
  +mobile()
    display block
    text-align center
  .cell
    display table-cell
    vertical-align middle
    +mobile()
      display block
#footer
  background gray
  border-top 1px solid darken(gray, 20%)

  ul
    padding 0

  a
    &:first-child
      i
        margin-right 20px
    i
      font-size 50px

#copy
  color darken(gray, 40%)
  p
    line-height 60px
    +mobile()
      text-align center
      line-height 1.5

// }}} END Footer
